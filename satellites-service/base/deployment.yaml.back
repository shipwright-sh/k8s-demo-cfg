apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: satellites-service
  name: satellites-service
spec:
  replicas: 1
  selector:
    matchLabels:
      app: satellites-service
  template:
    metadata:
      labels:
        app: satellites-service
    spec:
      containers:
      - image: docker.io/lmctague/satellites-service:fc3e6d31a20d7d966c03285b91b09675dc84a1b7
        name: satellites-service
        ports:
        - name: http
          containerPort: 80
        #livenessProbe:
        #  httpGet:
        #    path: "/"
        #    port: http
        #readinessProbe:
        #  httpGet:
        #    path: "/"
        #    port: http
        env:
        - name: DATABASE_URL 
          value: "postgres://demo:7O2Beg8FlCJvJsQL@postgres-postgresql.demo.svc.cluster.local/satellites"
        - name: PASSWORD_SECRET_KEY
          value: ""
        - name: JWT_SECRET_KEY
          value: ""
        resources:
          requests:
            memory: "64Mi"
            cpu: "250m"
          limits:
            memory: "128Mi"
            cpu: "500m"